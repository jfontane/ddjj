            </ol>
        </nav>
        <div class="grid_16">
            <table class="table">

                <!-- ITERACIÓN SOBRE LOS EVENTOS DE UN DISERTANTE -->
                <tr>
                    <td>
                        Nombre
                    </td>
                    <td>
                        {{ organismo.nombre }}
                    </td>
                </tr>
                <tr>
                    <td>
                        Domicilio
                    </td>
                    <td>
                        {{ organismo.domicilioCalle }}&nbsp;{{ organismo.domicilioNumero }}
                    </td>
                </tr>
                {% if organismo.representante %}
                    <tr>
                        <td>
                            Representante Nombres
                        </td>
                        <td>
                            {{ organismo.representante.apellido }},{{ organismo.representante.nombres }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Representante Cuil</label>
                        </td>
                        <td>
                            {{ organismo.representante.cuil }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan='2'>
                            No tiene Representante Asignado
                        </td>
                    </tr>
                {% endif %}
            </table>
        </div>
        <br>&nbsp;
        <img src="{{ asset('bundles/jubilacionesdeclaraciones/img/email.png') }}" width="60">&nbsp;<a href="#">Enviar Correo</a>

