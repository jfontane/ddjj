    {% block body %}
        {# CONTENIDO ORIGINAL DEL ARCHIVO Y SIN LAS ETIQUETAS <html><body> � </body></html> #}
        <br>
        <h1>Datos del Organismo</h1>
        <br>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('principal_logueado') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{path('organismo_organismo_listar')}}">Organismos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ver</li>
            </ol>
        </nav>

        <div class="grid_16">
            <table class="table">

                <!-- ITERACIÓN SOBRE LOS EVENTOS DE UN DISERTANTE -->
                <tr>
                    <th>
                        Nombre
                    </th>
                    <td>
                        {{ organismo.nombre }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Codigo
                    </th>
                    <td>
                        {{ organismo.codigo }}
                    </td>
                </tr>
                <tr>
                    <th>
                        CUIT
                    </th>
                    <td>
                        {{ organismo.cuit }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Domicilio
                    </th>
                    <td>
                        {{ organismo.domicilioCalle }} {{ organismo.domicilioNumero }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Localidad
                    </th>
                    <td>
                        {{ organismo.localidad }}  <b>CP:</b>  {{ organismo.codigoPostal }} <b>Zona:</b> {{ organismo.zona }}
                    </td>
                </tr>

                <tr>
                    <th>
                        Telefono
                    </th>
                    <td>
                        {{ organismo.telefonoCaracteristica }} - {{ organismo.telefonoNumero }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Email
                    </th>
                    <td>
                        {{ organismo.email }}
                    </td>
                </tr>

                <tr colspan="2">
                    <th>
                        <hr>
                    </th>
                </tr>
                {% if organismo.representante %}
                    <tr>
                        <th>
                            Representante Nombres
                        </th>
                        <td>
                            {{ organismo.representante.apellido }},{{ organismo.representante.nombres }}
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Representante Cuil
                        </th>
                        <td>
                            {{ organismo.representante.cuil }}
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Representante Email
                        </th>
                        <td>
                            {{ organismo.representante.email }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan='2'>
                            No tiene Representante Asignado
                        </td>
                    </tr>
                {% endif %}
            </table>
        </div>
        <br>&nbsp;

    {% endblock %}
