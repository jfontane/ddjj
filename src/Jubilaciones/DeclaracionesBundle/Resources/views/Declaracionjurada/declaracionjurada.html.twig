{% extends "@CursoSymfonyEventos/layout.html.twig" %}
{% block title %}Evento{% endblock %}
{% block metadesc %}{{ evento.titulo }} por {{ evento.disertante }}, se impartirá el {{ evento.fecha |
date("d M") }}.{% endblock %}
    {% block pageid 'evento' %}

        {% block contenido %}
            {# CONTENIDO ORIGINAL DEL ARCHIVO Y SIN LAS ETIQUETAS <html><body> � </body></html> #}

            <h1>{{ evento.titulo }}</h1>
            <p>{{ evento.descripcion | raw }}</p>
            <div class="grid_2 alpha">
                <strong>Fecha</strong> {{ evento.fecha | date("d M") }}
            </div>
            <div class="grid_2">
                <strong>Hora</strong> {{ evento.hora | date("H:i") }} - {{ evento.horaFinalizacion | date("H:i") }}
            </div>
            <div class="grid_2">
                <strong>Idioma</strong> {{ evento.idioma }}
            </div>
            <div class="grid_3">
                <strong>Disertante</strong> <a href="{{path('disertante', {'id': evento.disertante.id })}}">{{ evento.disertante }}</a>
            </div>
        {% endblock %}
