                <li class="breadcrumb-item active" aria-current="page">Representantes</li>
            </ol>
        </nav>

        <!-- MENSAJES FLASH ADMIN AQUÍ (utilizar <div class=”flash_admin”> </div>) -->
        <div class="flash_admin">
            {% for mensaje in app.session.flashbag.get('warn') %}
                <p class="warn">{{ mensaje }}</p>
            {% endfor %}
        </div>

        <div class="grid_16">
          <table class="table">
            <thead class="thead-dark">
                    <tr>
                        <th>Cuil</th>
                        <th>Apellido</th>
                        <th>Nombres</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for representante in representantes %}
                        <tr>
                            <td>
                                {{ representante.cuil }}
                            </td>
                            <td>{{ representante.apellido }}</td>
                            <td>
                                {{  representante.nombres }}
                            </td>
                            <td>{{ representante.email }}</td>
                            <td>
                                <a href="{{ path('contralor_representante_ver', { 'id' : representante.id }) }}">Ver</a>&nbsp;&nbsp;
                                <a href="">Editar</a>&nbsp;&nbsp;
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">No existe ninguna Declaracion Jurada</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <a href=""> Nuevo </a>
            <br>
        </div>
