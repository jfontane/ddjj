{% block body %}
{# CONTENIDO ORIGINAL DEL ARCHIVO Y SIN LAS ETIQUETAS <html><body> � </body></html> #}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('principal_logueado') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{path('organismo_declaracion_listar')}}">Declaraciones</a></li>
    <li class="breadcrumb-item active" aria-current="page">Ver</li>
  </ol>
</nav>
<br>
<table>
  <tr>
    <th>Periodo:</th> <td>{{ declaracion.periodoAnio }} / {{ declaracion.periodoMes }}</td>
  </tr>
  <tr>
    <th>Tipo Liquidacion:</th> <td>{{ declaracion.tipoLiquidacion | raw }}</td>
  </tr>
  <tr>
    <th>Fecha Entrada:</th> <td>{{  declaracion.fechaEntrega is empty ? "" : declaracion.fechaEntrega | date('Y-m-d H:i') }}</td>
  </tr>
  <tr>
    <th>Estado:</th> <td>{{ declaracion.estado }}</td>
  </tr>
</table>
<hr>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Concepto</th><th>Monto ($)</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Remunerativo</th>
      <td>{{ valores.totalRemunerativo | number_format(2, ',', '.') }}</td>
    </tr>
    <tr>
      <th>No Remunerativo</th>
      <td>{{ valores.totalNoRemunerativo | number_format(2, ',', '.') }}</td>
    </tr>
    <tr>
      <th>Aporte Personal</th>
      <td>{{ valores.totalApPersonal | number_format(2, ',', '.') }}</td>
    </tr>
    <tr>
      <th>Contribucion Patronal</th>
      <td>{{ valores.totalApPatronal | number_format(2, ',', '.') }}</td>
    </tr>
    <tr>
      <th>Inasistencia - Suspensiones</th>
      <td>{{ valores.totalInasisSusp | number_format(2, ',', '.') }}</td>
    </tr>
    <tr>
      <th>Licencia sin goce de Haberes</th>
      <td>{{ valores.totalLicSinSueldo | number_format(2, ',', '.') }}</td>
    </tr>
    <tr>
      <th>Tarea Riesgosa</th>
      <td>{{ valores.totalTareasRiesgoza | number_format(2, ',', '.') }}</td>
    </tr>
  </tbody>



</table>


