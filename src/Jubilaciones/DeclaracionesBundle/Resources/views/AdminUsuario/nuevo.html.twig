        <H1>REGISTRO DE USUARIO</H1>
        <br>
        <!-- AGREGAR CÃ“DIGO FALTANTE -->
        {{ form_errors(form) }}
        {{ form_start(form) }}
        {{ form_errors(form.username) }}
