{% extends "@JubilacionesDeclaraciones/layout.html.twig" %}
{% block title %}
Organismo

{% endblock %}
{% block pageid 'admin' %}

{% block body %}
{# CONTENIDO ORIGINAL DEL ARCHIVO Y SIN LAS ETIQUETAS <html><body> ï¿½ </body></html> #}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('principal_logueado') }}">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Organismo</li>
  </ol>
</nav>
<div class="container-fluid">

  
  <br/>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Representante</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {# table body #}
      {% for item in organismos %}
      <tr {% if loop.index is odd %}class="color"{% endif %}>
        <td>{{ item.codigo }}</td>
        <td>{{ item.nombre }}</td>
        {% if item.representante is null %}
        <td>Sin Representante</td>
        {% else %}
        <td>{{ item.representante.cuil }} {{ item.representante.apellido }}, {{ item.representante.nombres }}</td>
        {% endif %}
        <td>
          <a href="">Ver</a>&nbsp;&nbsp;
          <a href="">Editar</a>&nbsp;&nbsp;
        </td>
      </tr>
      {% endfor %}
      <tbody>
      </table>
      <br>
      
    </div>


    {% endblock %}
    {% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function () {
      $('a[id=btn_borrar]').on('click', function () {
        event.preventDefault();
        id = $(this).data("id");
        //var url = "../admin/declaracion/listar";
        var url = "./borrar/" + id;
        if (confirm('Esta seguro de Eliminar El Usuario??')) {
          $(location).attr('href', url);
        }
      });
    });
    </script>

    {% endblock %}
