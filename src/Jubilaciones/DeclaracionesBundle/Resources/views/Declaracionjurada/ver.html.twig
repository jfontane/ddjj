{% extends "@JubilacionesDeclaraciones/layout-organismo.html.twig" %}
{% block title %}{{declaracion.organismo.nombre}} - {{declaracion.organismo.codigo}}
     {% endblock %}
{% block pageid 'admin' %}

    {% block body %}
        {# CONTENIDO ORIGINAL DEL ARCHIVO Y SIN LAS ETIQUETAS <html><body> ï¿½ </body></html> #}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('principal_logueado') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{path('organismo_declaracion_listar')}}">Declaraciones</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ver</li>
            </ol>
        </nav>
        <p>
            <strong>   
                Periodo:
            </strong>
            {{ declaracion.periodoAnio }} / {{ declaracion.periodoMes }}&nbsp;&nbsp;&nbsp;&nbsp;
            <strong>   
                Tipo Liquidacion:
            </strong>
            {{ declaracion.tipoLiquidacion | raw }}
        </p>
        <p>
            <strong>   
                Fecha Entrada:
            </strong>  
            {{  declaracion.fechaEntrega is empty ? "" : declaracion.fechaEntrega | date('Y-m-d H:i') }}
            &nbsp;&nbsp;&nbsp;&nbsp;
            <strong>
                Fecha Ingreso:
            </strong> 
            {{  declaracion.fechaIngreso is empty ? "" : declaracion.fechaIngreso | date('Y-m-d H:i') }}
        </p>

        <p>
            <strong>Estado</strong> 
            {{ declaracion.estado }}
        </p>

        <div class="grid_16">
            <table>
                <thead>
                    <tr>
                        <th>Concepto</th>
                        <th>Monto ($)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Remunerativo</td>
                        <td>{{ valores.totalRemunerativo | number_format(2, ',', '.') }}</td>
                    </tr>
                    <tr>
                        <td>No Remunerativo</td>
                        <td>{{ valores.totalNoRemunerativo | number_format(2, ',', '.') }}</td>
                    </tr>
                    <tr>
                        <td>Aporte Personal</td>
                        <td>{{ valores.totalApPersonal | number_format(2, ',', '.') }}</td>
                    </tr>
                    <tr>
                        <td>Contribucion Patronal</td>
                        <td>{{ valores.totalApPatronal | number_format(2, ',', '.') }}</td>
                    </tr>
                    <tr>
                        <td>Inasistencia - Suspensiones</td>
                        <td>{{ valores.totalInasisSusp | number_format(2, ',', '.') }}</td>
                    </tr>
                    <tr>
                        <td>Licencia sin goce de Haberes</td>
                        <td>{{ valores.totalLicSinSueldo | number_format(2, ',', '.') }}</td>
                    </tr>
                    <tr>
                        <td>Tarea Riesgosa</td>
                        <td>{{ valores.totalTareasRiesgoza | number_format(2, ',', '.') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br>&nbsp;
    {% endblock %}
    {% block javascripts %}
