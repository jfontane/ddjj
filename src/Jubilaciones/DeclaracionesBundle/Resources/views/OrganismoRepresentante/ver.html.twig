{% extends "@JubilacionesDeclaraciones/layout.html.twig" %}
{% block title %}Datos del Representante{% endblock %}
{% block pageid 'Representante' %}

    {% block body %}
        {# CONTENIDO ORIGINAL DEL ARCHIVO Y SIN LAS ETIQUETAS <html><body> � </body></html> #}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('principal_logueado') }}">Home</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="{{ path('contralor_representante_listar') }}" >Representantes</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ver</li>

            </ol>
        </nav>
        <p>
            <strong>
                CUIL:
            </strong>
            {{ representante.cuil }}
            &nbsp;&nbsp;
            <strong>
                Apellido y Nombres:
            </strong>
            {{ representante.apellido }}, {{ representante.nombres }}

        </p>
        <p>
        <div class="grid_16">
            <table>
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Organismo</th>
                        <th>FR-20</th>
                    </tr>
                </thead>
                <!-- ITERACIÓN SOBRE LOS EVENTOS DE UN DISERTANTE -->
                {% for organismo in representante.organismos %}
                    <tr>
                        <td>
                            {{ organismo.codigo }}
                        </td>
                        <td>
                            {{ organismo.nombre }}
                        </td>
                        <td>
                            {{ organismo.entregoFormulario }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan='2'>No Tiene ningun Organismo</td>
                    </tr>
                    <!-- CONSIDERAR EL CASO DE QUE NO EXISTAN EVENTOS -->
                    <!-- FIN ITERACIÓN SOBRE LOS EVENTOS DE UN DISERTANTE -->
                {% endfor %}
            </table>
            <a href="{{path('contralor_representante_listar')}}"> Volver </a>&nbsp;
        </div>
        <br>&nbsp;

    {% endblock %}
